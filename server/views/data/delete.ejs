<body>
    <!-- form for entering a new person into database -->
    <div class="container">
        <h1 class="mb-4"> Person to be deleted from database!</h1>
        <form action="/data/deleter" method="POST">
            <div class="form-group">
                <label for="ssn"> Social Security Number </label>
                <br>
                <input required type="text" name = "ssn" id="ssn" maxlength="3">-
                <input required type="text" name = "ssn2" id="ssn2" maxlength="2">-
                <input required type="text" name = "ssn3" id="ssn3" maxlength="4">
            </div>

            <a href="/" class="btn btn-secondary"> Cancel </a>
            <button type="submit" class="btn btn-danger"> Delete </button>
            
        </form>
    </div>

</body>
</html>