<body>
    <div class="container" id="loginform">
        <!-- <form action="/data/userlogin" method="POST"> -->
        <form action="/login" method="POST">
            <!-- will use a similar form to edit data, so include it in separate file -->
            <div class="form-group">
                <label for="username"> Username: </label>
                <input required type="text" name = "username" id="username" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="password"> Password: </label>
                <input required type="password" name = "password" id="password" class="form-control">
            </div>
    
            <a href="/data/registerForm" class="btn btn-secondary"> Register </a>
            <button type="submit" class="btn btn-primary"> Log In </button>
        </form>
        <!-- <%= "This is the username" + locals.username %>
        <br>
        <%= locals.username==null %> -->
    
        <% if (messages.error){%>
            <p class="text-danger"> <%= messages.error %></p>
        <% } %>
    </div>


</body>
</html>